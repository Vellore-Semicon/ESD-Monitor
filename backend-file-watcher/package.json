{
  "name": "backend-file-processor",
  "version": "1.0.0",
  "main": "processor.js",
  "bin": "processor.js",
  "scripts": {
    "start": "nodemon processor.js",
    "exe": "pkg . --out-path dist/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@serialport/parser-readline": "^13.0.0",
    "dotenv": "^17.2.0",
    "fs-extra": "^11.3.0",
    "mongoose": "^6.13.8",
    "node-cron": "^3.0.2",
    "nodemon": "^3.1.10",
    "serialport": "^13.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "config/**/*",
      "data/**/*",
      "models/**/*",
      "services/**/*",
      "utils/**/*",
      ".env"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  }
}
